<%= form_for([@article, @article.comments.new], :remote => true, :html => {:style => 'display: block;'}) do |f| %>
	<div class="field">
		<%= f.text_field :body, :autofocus => true %>
		<%= f.text_field :father_comment_id, :value => params[:father_comment_id], :type => "hidden" %>
	</div>
	<div class="field">
		<%= f.submit 'Adicionar' %>
		<%= submit_tag 'Cancel' %>
	</div>
<% end %>
