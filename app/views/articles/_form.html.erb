<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
</div>
  <% end %>

  <div class="field">
    <%= f.label "Título" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label "Autor" %><br />
    <%= f.text_field :autor %>
  </div>
  <div class="field">
    <%= f.label "Data" %><br />
    <%= f.date_select :postdate, :start_year => 2012, :prompt => { :day => 'Dia', :month => 'Mês', :year => 'Ano' }, :order => [:day, :month, :year]  %>
  </div>
  <div class="field">
	<%= f.label "Categorias" %><br />
	<% for category in Category.all %>
		<%= check_box_tag 'article[category_ids][]', category.id, @article.category_ids.include?(category.id), :id => dom_id(category) %>
		<%= label_tag dom_id(category), category.name, :class => "check_box_label" %>
	<% end %>
  </div>
  <div class="field">
    <%= f.label "Resumo" %><br />
    <%= f.text_area :resume %>
  </div>
  <div class="field">
    <%= f.label "Texto" %><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= submit_or_cancel(f) %>
  </div>
<% end %>